- Report.all.in_groups_of(3) do |reports|
  .row.row-eq-height.margin-bottom
    - reports.each do |report|
      - if report.present?
        .col-md-4
          %h2= report.title
          %p
            - if report.photo?
              = image_tag report.photo.url(:small)
          %p= report.description
          = link_to "Read the report", report.report_url, class: 'button'
